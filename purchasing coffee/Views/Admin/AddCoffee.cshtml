@model Coffee
@{
}
<div class="container-fluid">
    <div class="mb-3">
        <h4>Add Cofee</h4>
    </div>
    <div class="row d-flex border-2 justify-content-center align-items-center h-100">
        <div id="main" class="w-50 border-2 rounded-2 p-2">
            <!-- Form Element -->
            <form asp-action="AddCoffee" method="post" enctype="multipart/form-data" class="form" asp-validation-summary="All">
                <!-- coffee Name -->
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Service Name :</label>
                    <input asp-for="Name" class="form-control" type="text" id="serviceName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- coffee Price -->
                <div class="form-group">
                    <label asp-for="price" class="form-label">Price :</label>
                    <input asp-for="price" class="form-control" inputmode="decimal" id="price">
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <!-- coffee quntity -->
                <div class="form-group">
                    <label asp-for="Quantity" class="form-label">Quantity :</label>
                    <input asp-for="Quantity" class="form-control" type="number" min="0" name="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <!-- image -->
                <div class="form-group">
                    <label asp-for="Image" class="form-label">Upload Image :</label>
                    <input asp-for="Image" class="form-control" type="file" accept="image/*">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <!-- submit button -->
                <div class="text-center mt-3">
                    <button class="mx-5 w-75 mt-3">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>